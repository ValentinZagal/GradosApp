<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/maint"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center|top">

    <TextView
        android:id="@+id/tituloApp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:text="@string/app_name"
        android:textColor="@color/marron"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagentemp"
        android:layout_width="112dp"
        android:layout_height="113dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ico_fire" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperaturaactual"
        android:textColor="@color/azul"
        android:textSize="22sp"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargando temperatura..."
        android:textSize="24sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />
    
    <Button
        android:id="@+id/btnActu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Actualizar Temperatura"
        android:textSize="25dp"

        />

</LinearLayout>

